<Window x:Class="ITEQ2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITEQ2"
        xmlns:UserControls="clr-namespace:ITEQ2.View.UserControls"
        xmlns:conv="clr-namespace:ITEQ2.Converters"
        mc:Ignorable="d" WindowStyle="None"
        Title="MainWindow" Height="720" Width="1280" Icon="/Styles/icons/Alt2.ico">
    <Window.Resources>
        <conv:ChangeTypeToTextConverter x:Key="ChangeTypeToTextConverter"/>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome> 
    <Grid Background="white">
        <Grid.RowDefinitions>
            <!-- Title Bar -->
            <RowDefinition Height="40"/>
            
            <!--Menu bar-->
            <RowDefinition Height="20"/>

            <!-- Search Bar -->
            <RowDefinition Height="40"/>

            <!-- Main Application -->
            <RowDefinition />

            <!-- Footer -->
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>


        <!-- Title Bar -->
        <UserControls:TitleBar x:Name="TitleBarControl" Grid.Row="0" Loaded="TitleBar_Loaded"/>
        <!-- Menu Bar   -->
        <UserControls:MenuBar x:Name="MenuBarControl" Grid.Row="1" Loaded="MenuBar_Loaded"/>
        <!-- Search Bar -->
        <UserControls:SearchBar x:Name="SearchBarControl" Grid.Row="2" Loaded="SearchBar_Loaded"/>

        <!-- Footer -->
        <UserControls:Footer_Control x:Name="FooterControl" Grid.Row="4"/>

        <!-- Main Application -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" MinWidth="110"/>
                <ColumnDefinition Width="5"/>
                <!-- GridSplitter -->
                <ColumnDefinition Width="800*"/>
                <ColumnDefinition Width="5"/>
                <!-- GridSplitter -->
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="White"/>
            <GridSplitter Grid.Column="3"  HorizontalAlignment="Stretch" Background="White"/>


            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="5"/>
                    <!-- GridSplitter -->
                    <RowDefinition x:Name="PropertiesRow" Height="Auto"/>
                </Grid.RowDefinitions>

                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Background="White"/>


                <!-- List of Equipent -->
                <ListView Grid.Row="0" Grid.Column="1"
                          x:Name="EquipmentListView" 
                          SelectionMode="Extended"
                          MouseDoubleClick="EquipmentListView_MouseDoubleClick"
                          PreviewMouseWheel="EquipmentListView_PreviewMouseWheel"
                          SelectionChanged="EquipmentListView_SelectionChanged"
                  
                          AlternationCount="2"
                  
                          GridViewColumnHeader.Click="EquipmentListView_Click"  
                          ItemsSource="{Binding EquipmentList}"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                          FontSize="12">
                    <!-- SizeChanged="ListView_SizeChanged" -->

                    <ListView.LayoutTransform>
                        <ScaleTransform x:Name="GridZoomTransform" ScaleX="1.0" ScaleY="1.0"/>
                    </ListView.LayoutTransform>
                    <ListView.View>
                        <GridView AllowsColumnReorder="True">

                            <GridViewColumn DisplayMemberBinding="{Binding GgLabel}" Width="100">
                                <GridViewColumnHeader Content="GG-LABEL" ContextMenuOpening="ColumnHeader_RightClick" >
                                    <GridViewColumnHeader.ContextMenu >
                                        <ContextMenu>
                                            <MenuItem  Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem  Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding Type}" Width="100">
                                <GridViewColumnHeader Content="TYPE" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding Make}" Width="100">
                                <GridViewColumnHeader Content="MAKE" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding Model}" Width="100">
                                <GridViewColumnHeader Content="MODEL" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding SerialNo}" Width="100">
                                <GridViewColumnHeader Content="SERIAL NO" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding SecurityId}" Width="100">
                                <GridViewColumnHeader Content="SECURITY ID" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding User}" Width="100">
                                <GridViewColumnHeader Content="User" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding Site}" Width="100">
                                <GridViewColumnHeader Content="Site" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding Status}" Width="100">
                                <GridViewColumnHeader Content="Status" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding PurchaseDate}" Width="100">
                                <GridViewColumnHeader Content="Purchase date" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding Received}" Width="100">
                                <GridViewColumnHeader Content="Received" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding ShortComment}" Width="100">
                                <GridViewColumnHeader Content="Short comment" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding PC}" Width="100">
                                <GridViewColumnHeader Content="PC" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding FucUser}" Width="100">
                                <GridViewColumnHeader Content="USER(Fuc)" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding Username}" Width="100">
                                <GridViewColumnHeader Content="Username" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding Date}" Width="100">
                                <GridViewColumnHeader Content="DATE" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding ReportDate}" Width="100">
                                <GridViewColumnHeader Content="ReportDATE" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding PCLocation}" Width="100">
                                <GridViewColumnHeader Content="PCLocation" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn DisplayMemberBinding="{Binding EmplMailAdresse}" Width="100">
                                <GridViewColumnHeader Content="EmplMailAdresse" ContextMenuOpening="ColumnHeader_RightClick">
                                    <GridViewColumnHeader.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Hide" Click="HideColumn_Click"/>
                                            <MenuItem Header="Reset Columns" Click="ResetColumns_Click"/>
                                        </ContextMenu>
                                    </GridViewColumnHeader.ContextMenu>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>
                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="black"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,0,0,0"/>
                            <Setter Property="BorderBrush" Value="#dce5ff"/>
                            <Setter Property="BorderThickness" Value="0.25"/>


                            <Setter Property="Background" Value="#e8eeff"/>
                            <Style.Triggers>
                                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                    <Setter Property="Background" Value="#f2f6ff"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#c3d3f9"/>

                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#a4bdf7"/>
                               
                                </Trigger>
                            </Style.Triggers>

                        </Style>
                    </ListView.Resources>
                </ListView>

                <!-- Equipment details -->
                <Grid x:Name="DetailsPanelGrid" Grid.Row="2" Grid.Column="1" Width="auto" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/><!--0-->
                        <ColumnDefinition Width="auto"/><!--1-->
                     
                    </Grid.ColumnDefinitions>
                    <!--log-->
                    <ListBox x:Name="ChangeHistoryListBox" Margin="2,0,5,0"
                             Grid.Column="1" 
                             Width="auto">
                        
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                
                                <TextBlock>
                                 <Run Text="User &quot;"/>
                                 <Run Text="{Binding User}"/>
                                 <Run Text="&quot; ON "/>
                                 <Run Text="{Binding Timestamp}"/>
                                 <Run Text=" "/>
                                 <Run Text="{Binding ChangeType, Converter={StaticResource ChangeTypeToTextConverter}}"/>
                                 <Run Text=" FIELD &quot;"/>
                                 <Run Text="{Binding FieldName}"/>
                                 <Run Text="&quot; FROM &quot;"/>
                                 <Run Text="{Binding OldValue}"/>
                                 <Run Text="&quot; TO &quot;"/>
                                 <Run Text="{Binding NewValue}"/>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>



                    <!-- EDit Part-->
                    <Border DataContext="{Binding SelectedItem, ElementName=EquipmentListView}" Background="white">
                        <Grid Margin="5" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- 0 Buttons -->
                                <RowDefinition Height="Auto"/>
                                <!-- 1 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 2 Titles -->
                                <RowDefinition Height="Auto"/>
                                <!-- 3 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 4 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 5 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 6 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 7 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 8 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 9 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 10 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 11 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 12 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 13 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 14 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 15 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 16 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 17 -->

                            </Grid.RowDefinitions>

                            <!-- Buttons -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                                <Button Content="Save" Width="80" Margin="5" Click="SaveDetailsPanel_Click"/>
                                <Button Content="Close" Width="80" Margin="5" Click="CloseDetailsPanel_Click"/>
                            </StackPanel>

                            <!-- IT-Equipment -->
                            <Rectangle  Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5" Height="5" Fill="#a4bdf7" VerticalAlignment="Bottom" Margin="0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="IT-Equipment" FontSize="16"/>
                            <Rectangle  Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="5" Height="5" Fill="#a4bdf7" VerticalAlignment="Bottom" Margin="0,5"/>
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="GG-LABEL:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding GgLabel, Mode=TwoWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="TYPE:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Type, Mode=TwoWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="MAKE:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Make, Mode=TwoWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="MODEL:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Model, Mode=TwoWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="USER:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding User, Mode=TwoWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="9" Grid.Column="0" Text="SITE:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding Site, Mode=TwoWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="10" Grid.Column="0" Text="STATUS:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="10" Grid.Column="1" SelectedValue="{Binding Status, Mode=TwoWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12">
                                <ComboBoxItem Tag="INSTOCK" Content="INSTOCK"/>
                                <ComboBoxItem Tag="NETWORKED" Content="NETWORKED"/>
                                <ComboBoxItem Tag="TERMINATED" Content="TERMINATED"/>
                                <ComboBoxItem Tag="DISCONNECTED" Content="DISCONNECTED"/>
                                <ComboBoxItem Tag="NOTRETRUNED" Content="NOTRETRUNED"/>
                                <ComboBoxItem Tag="TOBERETRUNED" Content="TOBERETRUNED"/>
                                <ComboBoxItem Tag="INTRANSIT" Content="INTRANSIT"/>
                            </ComboBox>

                            <TextBlock Grid.Row="11" Grid.Column="0" Text="Purchase date:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding PurchaseDate, Mode=TwoWay}" Width="180" Height="22.5" VerticalContentAlignment="Center" FontSize="12"/>

                            <TextBlock Grid.Row="12" Grid.Column="0" Text="Received date:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="12" Grid.Column="1" Text="{Binding Received, Mode=TwoWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="13" Grid.Column="0" Text="Short comment:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="13" Grid.Column="1" Text="{Binding ShortComment, Mode=TwoWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="14" Grid.Column="0" Text="SERIAL NO:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="14" Grid.Column="1" Text="{Binding SerialNo, Mode=TwoWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="15" Grid.Column="0" Text="SECURITY ID:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="15" Grid.Column="1" Text="{Binding SecurityId, Mode=TwoWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <!-- Right Column (FUC-Report) -->
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="FUC-Report" FontSize="16"/>
                        

                            <TextBlock Grid.Row="4" Grid.Column="3" Text="PC:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="4" Grid.Column="4" Text="{Binding PC, Mode=OneWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="5" Grid.Column="3" Text="USER (FUC):" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="5" Grid.Column="4" Text="{Binding FucUser, Mode=OneWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="6" Grid.Column="3" Text="Username:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="6" Grid.Column="4" Text="{Binding Username, Mode=OneWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="7" Grid.Column="3" Text="DATE:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="7" Grid.Column="4" Text="{Binding Date, Mode=OneWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="8" Grid.Column="3" Text="ReportDATE:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="8" Grid.Column="4" Text="{Binding ReportDate, Mode=OneWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="9" Grid.Column="3" Text="PCLocation:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="9" Grid.Column="4" Text="{Binding PCLocation, Mode=OneWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>

                            <TextBlock Grid.Row="10" Grid.Column="3" Text="EmplMailadresse:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="10" Grid.Column="4" Text="{Binding EmplMailAdresse, Mode=OneWay}" Width="180" Height="22.5" VerticalContentAlignment=" Center" FontSize="12"/>
                            <Rectangle  Grid.Column="0" Grid.Row="17" Grid.ColumnSpan="5" Height="5" Fill="#a4bdf7" VerticalAlignment="Bottom" Margin="0,5"/>

                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Left Tab display -->
            <Grid Grid.Row="0" Grid.Column="0">
                <TabControl>
                    <TabItem Header="Hidden Columns" Name="HiddenColumnsTab" Width="110">
                        <Grid Background="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" MaxWidth="200" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Margin="10">
                                <ItemsControl ItemsSource="{Binding HiddenColumns}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" Foreground="Black" Cursor="Hand" FontSize="14" FontWeight="Bold" Width="100" Height="30"
                                                   MouseLeftButtonDown="HiddenColumn_Click"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </TabItem>


                    <TabItem Header="Column Presets" Width="110">
                        <Grid Background="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Margin="5">
                                <ItemsControl ItemsSource="{Binding GridViewPresets}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" Foreground="Black" Cursor="Hand" FontSize="14" FontWeight="Bold"
                                   Width="auto" Height="30" MouseLeftButtonDown="GridViewPreset_Click"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>

            <!-- Right Tab display -->
            <Grid Grid.Row="0" Grid.Column="4" Width="1">

            </Grid>
        </Grid>
    </Grid>
</Window>
