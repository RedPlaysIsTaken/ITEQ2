<Window x:Class="ITEQ2.View.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITEQ2.View.Windows"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="220" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid>
            <WrapPanel Margin="20" HorizontalAlignment="Center">
                <TextBlock Text="Name:" Margin="3" Height="20"/>
                <TextBox x:Name="ValueTextBox" Margin="3"/>
            </WrapPanel>

            <Button x:Name="BtnApplyNameChange" Content="Apply" Click="BtnApplyNameChange_Click" Height="20" Width="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="15"/>
        </Grid>
    </Grid>
</Window>
