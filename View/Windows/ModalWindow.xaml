<Window x:Class="ITEQ2.View.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITEQ2.View"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterOwner"
        Title="ModalWindow" Height="150" Width="250">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox Name="txtInput" Width="200" Height="40" Margin="5"
                     TextChanged="txtInput_TextChanged"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnOK" Content="OK" Click="btnOK_Click" IsEnabled="False"
                        Width="50" Height="40" Margin="5"/>
                <Button Name="btnCancel" Content="Cancel" Click="btnCancel_Click"
                        Width="50" Height="40" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
