<Window x:Class="ITEQ2.View.Windows.ChangeMultipleValuesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITEQ2.View.Windows"
        mc:Ignorable="d"
        Title="Bulk Edit Field" Height="220" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Select Field:" Margin="0,0,0,5"/>
            <ComboBox x:Name="FieldComboBox" Margin="0,0,0,10" />

            <TextBlock Text="New Value:" Margin="0,0,0,5"/>
            <TextBox x:Name="ValueTextBox" Margin="0,0,0,10"/>

            <Button x:Name="BtnApplyChanges" Content="Apply" Click="BtnApplyChanges_Click" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
