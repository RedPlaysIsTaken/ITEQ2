<UserControl x:Class="ITEQ2.View.UserControls.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ITEQ2.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>



        <TextBox Grid.Column="0" x:Name="txtBoxSearchBar" Height="30" Width="400" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Center"
                 FontSize="16" TextChanged="txtBoxSearchBar_TextChanged"/>
    </Grid>
</UserControl>
