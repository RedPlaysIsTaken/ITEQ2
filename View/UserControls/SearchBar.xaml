<UserControl x:Class="ITEQ2.View.UserControls.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ITEQ2.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>



        <TextBox Grid.Column="0" x:Name="txtBoxSearchBar" Height="30" Width="400" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Center"
                 FontSize="16" TextChanged="txtBoxSearchBar_TextChanged"/>
        <Button Grid.Column="1"  x:Name="BtnRefresh" Height="30" Width="30" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Right"
                Content="🔄" Click="BtnRefresh_Click"/>
        <Button Grid.Column="2"  x:Name="BtnAddRow" Height="30" Width="120" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Right"
                Content="Add new Equipment" Click="BtnAddRow_Click"/>
        <Button Grid.Column="3"  x:Name="BtnCreateGridPreset" Height="30" Width="120" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Right"
                Content="Save Grid Preset" Click="BtnCreateGridPreset_Click"/>
        <Button Grid.Column="4" x:Name="BtnSetValuesForSelectedRows" Margin="5" Height="30" Width="160" VerticalAlignment="Top" HorizontalAlignment="Left" 
                Content="Set values for selected rows" Click="BtnSetValuesForSelectedRows_Click"/>
    </Grid>
</UserControl>
