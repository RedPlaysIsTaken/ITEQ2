<UserControl x:Class="ITEQ2.View.UserControls.FooterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ITEQ2.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Run Text="IT-equipment: " />
            <Run Text="{Binding WorkingDocFileName, Mode=OneWay}" />
            <Run Text=" (Last modified: " />
            <Run Text="{Binding WorkingDocLastModified, Mode=OneWay}" />
            <Run Text=")" />
            </TextBlock>
            <TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Run Text="FUC-Report: " />
            <Run Text="{Binding FucDocFileName, Mode=OneWay}" />
            <Run Text=" (Last modified: " />
            <Run Text="{Binding FucDocLastModified, Mode=OneWay}" />
            <Run Text=")" />
            </TextBlock>
        </Grid>

        <Grid Grid.Column="1">
            <WrapPanel>
                <Slider x:Name="ZoomSlider" Minimum="0.5" Maximum="2.0" Value="1.0" TickFrequency="0.1" Width="200" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <Button Content="Reset Zoom" Click="ResetZoom_Click" Height="25" Width="80" Margin="2.5" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </WrapPanel>
        </Grid>
    </Grid>
</UserControl>
