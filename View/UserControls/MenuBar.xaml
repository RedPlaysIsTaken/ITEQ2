<UserControl x:Class="ITEQ2.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ITEQ2.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="15" d:DesignWidth="1080">

    <!-- Menu Bar -->
    <Grid Background="DarkGray">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Background="DarkGray">
            <MenuItem Header="File" FontSize="12">
                <MenuItem Name="menuitemOpen" Header="Open File" FontSize="12"
                          Click="menuitemOpen_Click"/>
                <MenuItem Name="menuitemSave" Header="Save File" FontSize="12"
                          Click="menuitemSave_Click"/>
            </MenuItem>
            <MenuItem Header="Edit" FontSize="12"/>
            <MenuItem Header="Settings" FontSize="12">
                <MenuItem Name="menuitemSettingsOpen" Header="Open Settings" FontSize="12"
                          Click="menuitemSettingsOpen_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
